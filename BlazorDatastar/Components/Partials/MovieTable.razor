@using BlazorDatastar.Models
@using BlazorDatastar.Utils

<table id="movie-table" class="table table-hover">
    <thead class="table-light">
        <tr>
            <th class="movie-table-title">Title</th>
            <th class="movie-table-score">Average Score</th>
            <th class="movie-table-actions">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Movies)
        {
            <MovieRow Movie="movie.movie" Flash="movie.updated" />
        }
    </tbody>
</table>

@code {
    [Parameter] public IEnumerable<(Movie movie, bool updated)> Movies { get; set; } = default!;
}